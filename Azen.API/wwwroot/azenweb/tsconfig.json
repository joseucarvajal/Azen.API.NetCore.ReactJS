{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,        
        "noImplicitAny": true,
        "removeComments": true,
        "module": "commonjs",
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "jsx": "react",
        "lib": [
            "es2015.core",
            "dom",            
            "es5",
            "es6"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}